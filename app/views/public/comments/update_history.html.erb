<div class="container main-content-container">
  <div class="row main-content-row">
    <div class="main-content-col-blank main-col-side">
    </div>
    <div class="main-content-col main-col-center">
      <h3 class="text-heading">～更新履歴～</h3>
      <% @comment_histories.each do |comment_history| %>
        <div class="post-row">
          <div class="user-name">
            <span class="text-title">ユーザー名: </span>
            <%= link_to user_path(comment_history.comment.user.account_id), class: "content-link-black" do %>
              <span><strong><%= comment_history.comment.user.name %></strong></span>
            <% end %>
          </div>
          <div>
            <span class="text-title">投稿内容:</span><br>
            <%= content_tag :div, class: "content-link-black post-text" do %>
              <%= safe_join(comment_history.body.split("\n").map { |line| h(line) }, tag(:br)) %>
            <% end %>
          </div>
          <div class="post-history-content">
            <span class="text-title">最終更新日時:</span>
            <span class="history-datetime"><%= l @comment.updated_at, format: :long %></span>
          </div>
        </div>
      <% end %>
    </div>
    <div class="main-content-col main-col-side">
      <h3 class="text-heading">～最新投稿～</h3>
      <%= render "public/conversations/comment_show", comment: @comment %>
    </div>
  </div>
</div>