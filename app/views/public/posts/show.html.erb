<div class="container">
  <div class="row">
    <div class="col-4">
      <h3 class="main-h3">コメントフォーム</h3>
    </div>
    <div class="col-4">
      <% if @post != nil %>
        <div class="row">
          <div class="col">
            <%= @post.user.name %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= @post.body %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= link_to posts_update_history_path do %>
              <p>更新履歴</p>
              <%= @post.updated_at %>
            <% end %>
          </div>
        </div>
        <% if @post.user.id == current_user.id %>
          <div class="row">
            <div class="col">
              <%= link_to "編集する", edit_post_path(@post.id) %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= link_to "削除する", post_path(@post.id), method: :delete %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="row">
          <div class="col">
            <p>存在しない投稿です</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>