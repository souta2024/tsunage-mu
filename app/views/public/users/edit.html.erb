<div class="container">
  <div class="row">
    <div class="col-4 offset-4">
      <%= form_with model: @user do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :account_id %>
        <%= f.label :introduction %>
        <%= f.text_area :introduction %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>