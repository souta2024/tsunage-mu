<% user_posts.each do |user_post| %>
  <div class="post-row user-post-row">
    <div class="user-name">
      <span class="text-title">ユーザー名: </span>
        <%= link_to user_path(user_post.user.account_id), class: "content-link-black" do %>
          <span><strong><%= user_post.user.name %></strong></span>
        <% end %>
    </div>
    <div class="user-name">
      <span class="text-title">アカウントID: </span>
      <span><%= user_post.user.account_id %></span>
    </div>
    <div>
      <span class="text-title">投稿内容:</span><br>
      <%= link_to post_path(user_post.id), class: "content-link-black post-text-link" do %>
        <%= safe_join(user_post.body.split("\n").map { |line| h(line) }, tag(:br)) %>
      <% end %>
    </div>
    <div>
      <%= render "public/post_favorites/btn", post: user_post %>
    </div>
    <div>
      <span class="text-title">投稿日時:</span>
      <span class="history-datetime"><%= time_ago_in_words(user_post.created_at) %>前</span>
    </div>
    <div>
      <% if user_post.post_histories.present? %>
        <span class="text-title">最終更新日時:</span>
        <%= link_to post_update_history_path(user_post.id), class: "history-link content-link-black" do %>
          <span class="history-datetime"><strong><%= l user_post.updated_at, format: :long %></strong></span>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>