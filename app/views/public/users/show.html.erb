<div class="container main-content-container">
  <div class="row">
    <div class="col-4 offset-4">
      <div class="row">
        <div class="col">
          <p>ユーザーネーム</p>
        </div>
        <div class="col">
          <%= @user.name %>
        </div>
      </div>
      <p>紹介文</p>
      <%= @user.introduction %>
      <% if @user.id == current_user.id %>
        <div class="row">
          <div class="col">
            <%= link_to "プロフィール編集", edit_user_path(@user.id) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>